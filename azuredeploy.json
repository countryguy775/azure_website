{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appLocation": {
        "type": "string"
    },
    "appName": {
        "type": "string"
    },
    "environment": {
        "defaultValue": "dev",
        "allowedValues": [
            "dev",
            "prod"
        ],
        "type": "string"
    },
    "indexDocument": {
        "type": "string"
    },
    "errorDocument404Path": {
        "type": "string"
    }
  },
  "variables": {
    "resourceGroupName": "[concat(parameters('appName'), '-', parameters('environment'), '-rg')]",
    "storageAccountName": "[concat(parameters('appName'), parameters('environment'), 'storage')]",
    "cdnProfileName": "[concat(parameters('appName'), '-', parameters('environment'), '-cdnp')]"
  },
  "resources": [
   {
    "type": "Microsoft.Resources/resourceGroups",
    "apiVersion": "2022-09-01",
    "name": "[variables('resourceGroupName')]",
    "location": "[parameters('appLocation')]",
    "properties": {}
   },
   {
    "type": "Microsoft.Resources/deployments",
    "apiVersion": "2022-09-01",
    "name": "storageDeployment",
    "location": "eastus",
    "properties": {
        "mode": "Incremental",
        "template": {
            "$schema": "https://schema.management.azure.com/schemas/2018-05-01/DeploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "resources": [
                {
                    "type": "Microsoft.Resources/storageAccounts",
                    "apiVersion": "2019-06-01",
                    "name": "[variables('resourceGroupName')]",
                    "location": "[parameters('appLocation')]",
                    "sku": {
                        "name": "Standard_Microsoft"
                    },
                    "kind": "StorageV2",
                    "properties": {}
                }
            ]
        }
    }
   }
  ]
}